/**index.wxss**/

.container {
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.container .item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.item-help {
  margin-top: 15vw;
  display: flex;
  flex-direction: column;

  border-style: solid;
  border-width: 1rpx;
  border-right-style: none;
  border-left-style: none;
  border-color: #ddd;
}

.item-help .content {
  padding: 24rpx 48rpx;
  height: 25vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  letter-spacing: 6rpx;
  font-weight: bold;
  font-family: 黑体;
  background: #fffff3;
  color: #333;
}

.container .item .block {
  width: 40vw;
  height: 25vw;
  margin: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 4rpx 4rpx 8rpx #aaa;
  font-size: 42rpx;
  letter-spacing: 10rpx;
  font-weight: bold;
  font-family: 微软雅黑;
  background: #fffff3;
  color: #a593e0;
}

.container .item .way {
  width: 40vw;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  text-decoration: underline;
  font-family: 微软雅黑;
}

.share-app { 
  position: fixed;
  margin-right: 64rpx;
  margin-bottom: 64rpx;
  right: 0;
  bottom: 0;
  font-size: 36rpx;
}

.share-app .img {
  width: 108rpx;
  height: 108rpx;
}