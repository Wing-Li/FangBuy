/**index.wxss**/

page {
  background: #fff;
}

.container {
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.header .round {
  width: 70vw;
  height: 70vw;
  margin-top: 10vw;
  display: flex;
  align-items: center;
  justify-content: center;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 50%;
  border: 4rpx solid #cccccc;
}

.header .round .content {
  width: 25vw;
  height: 25vw;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 50%;
  border: 3rpx solid #e7e7e7;
}

.container .item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.container .help {
  width: 84vw;
  height: 15vw;
  margin: 64rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  font-family: 微软雅黑;
  background: #F8F8F8;
  color: #888;
}

.container .item .block {
  width: 32vw;
  height: 10vw;
  margin: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  font-family: 微软雅黑;
  background: #fff;
  color: #a593e0;
}

.container .item .way {
  width: 40vw;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #666;  
  font-family: 微软雅黑;
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100vw;
  margin: 64rpx auto;
  font-size: 36rpx;
}
