.container {
  padding: 24rpx 0;
}

.item {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-top: 0.5rpx;
}

.item-text {
  flex: 1;
  margin: 16rpx 24rpx 5rpx;
}

.item-input1 {
  flex: 1;
  border: 1px solid #ccc;
  padding: 3px 0px;
  border-radius: 3px; /*css3属性IE不支持*/
  padding-left: 5px;
  margin: 16rpx 24rpx;
}

.item-input2 {
  flex: 2;
  border: 1px solid #ccc;
  padding: 3px 0px;
  border-radius: 3px; /*css3属性IE不支持*/
  padding-left: 5px;
  margin: 16rpx 24rpx;
}

.bottom {
  width: 100%;
  height: 92rpx;
  background: #eee;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  
  border-style: solid;
  border-width: 1rpx;
  border-right-style: none;
  border-bottom-style: none;
  border-left-style: none;
  border-color: #ddd;
}

.bottom .price {
  color: red;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 24rpx;
}

.btn {
  right: 0;
  margin-right: 48rpx;
}
